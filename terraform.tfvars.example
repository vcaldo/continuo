# Linode API token (get from https://cloud.linode.com/profile/tokens)
linode_token = "your-linode-api-token"

# SSH public keys for admin access
ssh_public_keys = [
  "ssh-ed25519 AAAA... user@example.com",
]

# Admin username (optional, defaults to "admin")
# admin_username = "admin"

# Hostname for the server (optional, defaults to "continuo")
# hostname = "continuo"

# New Relic Infrastructure Monitoring (optional)
# new_relic_license_key = "your-new-relic-license-key"
# new_relic_account_id  = "your-account-id"
# new_relic_region      = "US"

# Path to SSH private key (needed for provisioners to upload files)
# ssh_private_key_path = "~/.ssh/id_ed25519"

# Telegram bot token (get from @BotFather)
# telegram_bot_token = "123456789:ABCdefGHIjklMNOpqrsTUVwxyz"
